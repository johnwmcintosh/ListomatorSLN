        <Label Text="By John McIntosh" FontSize="Title" Padding="30,10,30,10"/>
        <Label Text="ToDo App demo for Intellishift built over Labor Day weekend 2020" FontSize="16" Padding="30,0,30,0"/>


        <Button HorizontalOptions="Center" Text="Reset lists" Margin="0,25,0,0"/>

    </StackLayout>

</ContentPage>
