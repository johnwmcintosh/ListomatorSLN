             x:Class="Listomator.MainPage">

    <StackLayout>
        <Frame BackgroundColor="{StaticResource Primary}" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Listomator" HorizontalTextAlignment="Center" TextColor="White" FontSize="24"/>
